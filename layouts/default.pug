        //- Reset Modal					
        <div id="reset" class="modal bottom-sheet">
            <div class="modal-content">
                <h4>Reset Account Credentials</h4>
                <p class="orange">All fields are required</p>
                <form method="POST" class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate" required>
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="modal-action modal-close waves-effect waves-orange btn-flat">Reset</a>
                        <button type="submit" class="modal-action modal-close waves-effect waves-orange btn-flat">Submit</a>
                    </div>
                </div>
            </form>
        </div>

